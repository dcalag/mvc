@{
    Layout = null;
 }
@model Login

<form  ic-post-to='@Url.Content("~/Home/ProcessLogin")'
  ic-replace-target="true" ic-on-error="onError()" ic-on-beforeSend="onBeforeSend()">
  	<div id="Mensaje">@Model.Mensaje</div>	
	<div class="form-group">
		<label for="Usuario">Usuario:</label>
		<input type="text" class="form-control" value="@Model.Usuario" id="Usuario" name="Usuario" />
	</div>
	<div class="form-group">
		<label for="Password">Password:</label>
		<input type="password" class="form-control" value="@Model.Password" id="Password" name="Password" />
	</div>
	<input type="submit" value="Enviar" class="btn btn-default" />	
	<img style="display:none" id="loader" src='@Url.Content("~/Content/ajax-loader.gif")' />

	<input type="hidden" value="@Model.LoginOk" name="LoginOk" id="LoginOk" />
	
	<script>
		if ($('#LoginOk').val() == 1) {
			window.location.href = '@Url.Action("Inicio", "Home")';	
		}
		
		function onError(){
	    	$('#mensajes').html('Error!');
	    	$('#loader').hide();
	  	}

	  	function onBeforeSend(){
	    	$('#loader').show();
	  	}
	</script>
</form>